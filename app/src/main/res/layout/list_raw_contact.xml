            android:paddingLeft="12dp"
            android:src="@drawable/ic_launcher"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="45"
            android:maxLines="2"
            android:text="Andriik Kovalchuk Andrii Kovalchuk Andrii Kovalchu"
            android:textSize="20dp"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@id/list_raw_contact_photo"
            android:id="@+id/list_raw_contact_name"
            android:layout_centerInParent="@+id/list_raw_contact_photo"/>

