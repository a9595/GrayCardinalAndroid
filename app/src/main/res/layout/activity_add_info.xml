<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="activities.AddInfoActivity">


    <EditText
            android:id="@+id/add_info_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:hint="@string/info_name_hint"
            android:maxLength="50"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:paddingTop="20dp"
            android:singleLine="true"/>

    <EditText
            android:id="@+id/add_info_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/add_info_name"
            android:layout_marginTop="15dp"
            android:scrollbars="vertical"
            android:maxLines="5"
            android:minHeight="@dimen/abc_action_bar_default_height"
            android:hint="@string/info_value_hint"
            android:maxLength="255"/>

    <Button
            android:id="@+id/add_info_add_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/add_info_value"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/white"
            android:background="@color/LightGreenButton"
            android:drawableLeft="@drawable/ic_save_info_button"
            android:padding="10dp"
            android:text="@string/add"/>

</RelativeLayout>
