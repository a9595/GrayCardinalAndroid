<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


    <EditText
            android:id="@+id/add_contact_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/contact_name"
            android:maxLength="50"
            android:textStyle="bold"
            android:paddingTop="20dp"
            android:singleLine="true"
            android:layout_below="@+id/imageView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

    <Button
            android:id="@+id/add_contact_add_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/white"
            android:background="@color/LightGreenButton"
            android:drawableLeft="@drawable/ic_save_info_button"
            android:padding="10dp"
            android:text="@string/save"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/add_contact_name"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

    <ImageView
            android:layout_width="80dp"
            android:visibility="gone"
            android:layout_height="80dp"
            android:id="@+id/imageView"
            android:background="@drawable/abc_ic_clear_normal"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/add_contact_name"
            android:layout_alignStart="@+id/add_contact_name"/>


</RelativeLayout>
